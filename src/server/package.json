{
    "name": "ludoserver",
    "version": "0.0.1",
    "description": "nodejs server",
    "repository": {
        "type": "git",
        "url": "git://github.com/maldestor95/nodejs.git"
    },
    "main": "app",
    "scripts": {
        "start": "npm run build && node ./build/bin/www",
        "lint": "eslint . --ext .ts",
        "start:dev": "nodemon ./src/bin/www.ts",
        "build": "rimraf ./build tsconfig.tsbuildinfo && tsc",
        "test": "mocha -r mocha.env.js -r ts-node/register ",
        "test:coverage": "nyc --reporter=text mocha -r mocha.env.js -r ts-node/register",
        "test:utils": "mocha --config utils/__tests__/.mocharc.js -r mocha.env.js",
        "test:dev": "mocha -r mocha.env.js -r ts-node/register --watch",
        "test:ts": "mocha -r mocha.env.js -r ts-node/register src/**/*.spec.ts --colors"
    },
    "author": "maldestor95",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "connect-history-api-fallback": "^1.6.0",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "express-validator": "^6.6.1",
        "lodash": "^4.17.20",
        "multer": "^1.4.2",
        "multer-s3": "^2.9.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "qs": "^6.9.1",
        "uuid": "^7.0.3",
        "validate.js": "^0.13.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/async": "^3.2.3",
        "@types/chai": "^4.2.12",
        "@types/chai-http": "^4.2.0",
        "@types/express": "^4.17.8",
        "@types/express-session": "^1.17.0",
        "@types/http-terminator": "^2.0.1",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.2",
        "@types/sinon": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "axios": "^0.19.2",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "concurrently": "^5.3.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.7.0",
        "find-free-port": "^2.0.0",
        "gulp": "^4.0.2",
        "http-terminator": "^2.0.3",
        "husky": "^4.2.5",
        "mocha": "^8.1.3",
        "nodemon": "^2.0.2",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "sinon": "^9.1.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
