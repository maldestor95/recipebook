{
  "name": "recipebook",
  "version": "1.0.0",
  "description": "Ce dépot  contient les recettes au format markdown avec un entête YML",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./build/bin/www",
    "lint": "eslint . --ext .ts",
    "start:dev": "nodemon ./src/app.ts",
    "build": "rimraf ./build tsconfig.tsbuildinfo && tsc",
    "test": "mocha -r mocha.env.js -r ts-node/register ",
    "test:coverage": "nyc --reporter=text mocha -r mocha.env.js -r ts-node/register",
    "test:utils": "mocha --config utils/__tests__/.mocharc.js -r mocha.env.js",
    "test:dev": "mocha -r mocha.env.js -r ts-node/register --watch",
    "test:ts": "mocha -r mocha.env.js -r ts-node/register src/**/*.spec.ts --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maldestor95/recipebook.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maldestor95/recipebook/issues"
  },
  "homepage": "https://github.com/maldestor95/recipebook#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/async": "^3.2.3",
    "@types/chai": "^4.2.12",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.6.2",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "debounce": "^1.2.1",
    "prompt-sync": "^4.2.0",
    "yaml": "^1.10.2"
  }
}
